model User {
  id                        Int       @id @default(autoincrement())
  fullName                  String
  email                     String    @unique
  phoneNumber               String    @unique
  password                  String
  isVerified                Boolean?  @default(false)
  isAdmin                   Boolean?  @default(false)
  forgotPasswordToken       String?
  forgotPasswordTokenExpiry DateTime?
  verifyToken               String?
  verifyTokenExpiry         DateTime?
  createdAt                 DateTime  @default(now())

  // papers Paper[]
}

model Paper {
  id            Int      @id @default(autoincrement())
  abstract      String
  paperCategory String
  paperTitle    String
  paperISSN     String
  paperVolume   String
  keywords      String
  previewUrl    String?
  downloadUrl   String?
  receivedDate  String
  approvedDate  String
  publishdDate  String?
  createdAt     DateTime @default(now())
  isOpen        Boolean  @default(false)
  ownerEmail    String

  authors Author[]
}

model Author {
  id           Int    @id @default(autoincrement())
  fullName     String
  email        String
  department   String
  organisation String

  papers Paper[]
}
